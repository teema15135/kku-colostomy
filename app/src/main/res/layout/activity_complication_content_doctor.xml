<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComplicationContentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical">
            <ImageButton
                android:id="@+id/compli_content_doctor_back_btn"
                android:layout_width="@dimen/back_button_size"
                android:layout_height="@dimen/back_button_size"
                android:layout_margin="20dp"
                android:clickable="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/back_bold_black" />
            <TextView
                android:id="@+id/compli_content_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/compli_content_doctor_back_btn"
                android:fontFamily="@font/mitr_light"
                android:text="อาการที่ควรไปพบแพทย์ทันที"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="always"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="200dp"
                android:padding="30dp"
                android:background="@drawable/shadow_home"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. ลำไส้มีสีที่เปลี่ยนไป "
                    android:textSize="20sp"
                    android:textColor="@color/dark"
                    android:background="@drawable/shape_pastel_blue_round"
                    android:paddingHorizontal="20dp"
                    android:fontFamily="@font/mitr_regular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/compli_content_doctor_1"
                    android:textSize="18sp"
                    android:textColor="@color/dark"
                    android:fontFamily="@font/mitr_light"/>

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/img_4_2_1"
                    android:layout_width="180dp"
                    android:layout_height="130dp"/>


                <TextView
                    android:layout_marginTop="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. ลำไส้นูนยื่นออกมา"
                    android:textSize="20sp"
                    android:textColor="@color/dark"
                    android:background="@drawable/shape_pastel_blue_round"
                    android:paddingHorizontal="20dp"
                    android:fontFamily="@font/mitr_regular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/compli_content_doctor_2"
                    android:textSize="18sp"
                    android:textColor="@color/dark"
                    android:fontFamily="@font/mitr_light"/>

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/img_4_2_2"
                    android:layout_width="180dp"
                    android:layout_height="130dp"/>


                <TextView
                    android:layout_marginTop="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. ทวารเทียมตีบ "
                    android:textSize="20sp"
                    android:textColor="@color/dark"
                    android:background="@drawable/shape_pastel_blue_round"
                    android:paddingHorizontal="20dp"
                    android:fontFamily="@font/mitr_regular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/compli_content_doctor_3"
                    android:textSize="18sp"
                    android:textColor="@color/dark"
                    android:fontFamily="@font/mitr_light"/>

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/img_4_2_3"
                    android:layout_width="180dp"
                    android:layout_height="130dp"/>


                <TextView
                    android:layout_marginTop="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. ทวารเทียมยุบตัวลงระดับผิวหนังหรือต่ำกว่าระดับผิวหนัง "
                    android:textSize="20sp"
                    android:textColor="@color/dark"
                    android:background="@drawable/shape_pastel_blue_round"
                    android:paddingHorizontal="20dp"
                    android:fontFamily="@font/mitr_regular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/compli_content_doctor_4"
                    android:textSize="18sp"
                    android:textColor="@color/dark"
                    android:fontFamily="@font/mitr_light"/>

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/img_4_2_4"
                    android:layout_width="180dp"
                    android:layout_height="130dp"/>


                <TextView
                    android:layout_marginTop="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. ปวดท้องร่วมกับการมีไข้ "
                    android:textSize="20sp"
                    android:textColor="@color/dark"
                    android:background="@drawable/shape_pastel_blue_round"
                    android:paddingHorizontal="20dp"
                    android:fontFamily="@font/mitr_regular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/compli_content_doctor_5"
                    android:textSize="18sp"
                    android:textColor="@color/dark"
                    android:fontFamily="@font/mitr_light"/>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>





</RelativeLayout>