<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EvaluationContentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/header_padding"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/evaluation_content_back_button"
            android:layout_width="@dimen/back_button_size"
            android:layout_height="@dimen/back_button_size"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/back_thin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/header_left_margin"
            android:fontFamily="@font/mitr_regular"
            android:gravity="center_vertical"
            android:text="@string/evaluation"
            android:textSize="@dimen/header_font_size" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/routine_padding_topic"
            android:paddingRight="@dimen/routine_padding_topic">

            <!-- 6.1 Color of colostomy -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/mitr_regular"
                    android:gravity="center_vertical"
                    android:text="@string/color_of_colostomy"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_11"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/pink_or_red" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_12"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/dark_red_and_more_red" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_13"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/dark_and_black" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_shadow" />

            <!-- 6.2 Moisture of colostomy -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/mitr_regular"
                    android:gravity="center_vertical"
                    android:text="@string/moisture_of_colostomy"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_21"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/good_moisture" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_22"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/dry_colostomy" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_shadow" />

            <!-- 6.3 Temperature of colostomy -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/mitr_regular"
                    android:gravity="center_vertical"
                    android:text="@string/temp_of_colostomy"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_31"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/warm" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_32"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/cold_colostomy" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_shadow" />

            <!-- 6.4 Position of colostomy -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/mitr_regular"
                    android:gravity="center_vertical"
                    android:text="@string/position_of_colostomy"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_41"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/normal_position" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_42"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/popout" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_43"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/collapse" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_shadow" />

            <!-- 6.5 Bleeding of colostomy -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/mitr_regular"
                    android:gravity="center_vertical"
                    android:text="@string/bleeding"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_51"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/no_bleeding" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_52"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/bleeding_little" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_53"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:lineSpacingMultiplier="0.9"
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/bleeding_tissue" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_54"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/bleeding_node" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_shadow" />

            <!-- 6.6 Size of colostomy -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/mitr_regular"
                    android:gravity="center_vertical"
                    android:text="@string/size_of_colostomy"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_61"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/normal_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_62"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/bigger_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_63"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:lineSpacingMultiplier="0.9"
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/smaller_size" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_shadow" />

            <!-- 6.7 Skin around colostomy -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/mitr_regular"
                    android:gravity="center_vertical"
                    android:text="@string/skin_around_colostomy"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_71"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/totally_normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_72"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/rash" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_73"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:lineSpacingMultiplier="0.9"
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/peeling_skin" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_74"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:lineSpacingMultiplier="0.9"
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/leak_of_liquid" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_75"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:lineSpacingMultiplier="0.9"
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/inflamed" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_76"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:lineSpacingMultiplier="0.9"
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/swelling_around" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/evaluation_button_right_margin">

                    <ImageButton
                        android:id="@+id/choice_77"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="@dimen/evaluation_button_right_margin" />

                    <TextView
                        android:lineSpacingMultiplier="0.9"
                        android:fontFamily="@font/mitr_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/separated" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>