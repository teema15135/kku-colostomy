<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/pastel_blue"
                android:layout_weight="1.3"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                android:layout_weight="1.7" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="always"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shadow_home"
                        android:orientation="vertical"
                        android:padding="30dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/mitr_regular"
                                android:text="ทวารเทียมคืออะไร"
                                android:textColor="@color/dark"
                                android:textSize="20sp" />

                            <ImageButton
                                android:id="@+id/general_knowledge_what"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/speaker_right_margin"
                                android:background="@android:color/transparent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/speaker_red" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/baijamjuree_regular"
                            android:lineSpacingExtra="5dp"
                            android:text="@string/home_meaning"
                            android:textColor="@color/dark"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/mitr_regular"
                                android:text="ทำไมจึงต้องทำทวารเทียม"
                                android:textColor="@color/dark"
                                android:textSize="20sp" />

                            <ImageButton
                                android:id="@+id/general_knowledge_why"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/speaker_right_margin"
                                android:background="@android:color/transparent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/speaker_red" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/baijamjuree_regular"
                            android:lineSpacingExtra="5dp"
                            android:text="@string/home_object"
                            android:textColor="@color/dark"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/mitr_regular"
                                android:text="ใครบ้างที่ต้องทำทวารเทียม"
                                android:textColor="@color/dark"
                                android:textSize="20sp" />

                            <ImageButton
                                android:id="@+id/general_knowledge_who"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/speaker_right_margin"
                                android:background="@android:color/transparent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/speaker_red" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/baijamjuree_regular"
                            android:lineSpacingExtra="5dp"
                            android:text="@string/home_who"
                            android:textColor="@color/dark"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/mitr_regular"
                                android:text="ตำแหน่งที่ทำทวารเทียม"
                                android:textColor="@color/dark"
                                android:textSize="20sp" />

                            <ImageButton
                                android:id="@+id/general_knowledge_position"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/speaker_right_margin"
                                android:background="@android:color/transparent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/speaker_red" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/baijamjuree_regular"
                            android:lineSpacingExtra="5dp"
                            android:text="@string/home_where"
                            android:textColor="@color/dark"
                            android:textSize="16sp" />
                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/basic_care_header"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical">
            <ImageButton
                android:id="@+id/knowledge_back_button"
                android:layout_width="@dimen/back_button_size"
                android:layout_height="@dimen/back_button_size"
                android:layout_margin="20dp"
                android:clickable="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/back_bold_black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/knowledge_back_button"
                android:fontFamily="@font/mitr_light"
                android:text="ความรู้ทั่วไป"
                android:textColor="@color/black"
                android:textSize="24sp" />
            <ImageView
                android:id="@+id/general_home_btn"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/home_black"/>
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>