<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.coe.kku.ac.kkucolostomy.CropImageView
        android:id="@+id/main_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/rainbow_bg" />

    <LinearLayout
        android:weightSum="7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_kku_colostomy"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_weight="2"
            android:background="@drawable/cloud"
            android:fontFamily="@font/playlist_caps"
            android:gravity="center"
            android:text="KKU\nColostomy"
            android:textSize="36sp" />

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/main_1_know_colostomy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_menu_horizontal_margin"
                android:layout_marginRight="@dimen/main_menu_horizontal_margin"
                android:background="@drawable/border_round_pink"
                android:fontFamily="@font/baijamjuree_semibold"
                android:paddingTop="@dimen/main_menu_vertical_padding"
                android:paddingBottom="@dimen/main_menu_vertical_padding"
                android:text="@string/knowing_about_colostomy"
                android:textSize="20sp" />

        </LinearLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/main_2_taking_care"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_menu_horizontal_margin"
                android:layout_marginRight="@dimen/main_menu_horizontal_margin"
                android:background="@drawable/border_round_pink"
                android:fontFamily="@font/baijamjuree_semibold"
                android:paddingTop="@dimen/main_menu_vertical_padding"
                android:paddingBottom="@dimen/main_menu_vertical_padding"
                android:text="@string/taking_care"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/main_3_evaluation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_menu_horizontal_margin"
                android:layout_marginRight="@dimen/main_menu_horizontal_margin"
                android:background="@drawable/border_round_pink"
                android:fontFamily="@font/baijamjuree_semibold"
                android:paddingTop="@dimen/main_menu_vertical_padding"
                android:paddingBottom="@dimen/main_menu_vertical_padding"
                android:text="@string/evaluation"
                android:textSize="20sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/male_nurse" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/border_round_yellow"
                android:fontFamily="@font/baijamjuree_semibold"
                android:gravity="center"
                android:padding="20dp"
                android:text="หน้าหลัก"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/female_nurse" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>