                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="horizontal">-->

                <!--<ImageButton-->
                <!--android:scaleType="fitCenter"-->
                <!--android:background="@android:color/transparent"-->
                <!--android:src="@drawable/speaker_yellow"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_marginRight="@dimen/speaker_right_margin"/>-->

                <!--<TextView-->
                <!--android:textColor="@color/colorAccent"-->
                <!--android:textSize="20dp"-->
                <!--android:fontFamily="@font/mitr_regular"-->
                <!--android:text="@string/press_to_listen"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->

                <!--</LinearLayout>-->

                <TextView
                    android:id="@+id/routine_content_describe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp"
                    android:fontFamily="@font/baijamjuree_regular"
                    android:lineSpacingExtra="5dp"
                    android:text="@string/eating_1"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_pastel_blue_round"
                    android:fontFamily="@font/baijamjuree_semibold"
                    android:paddingHorizontal="20dp"
                    android:text="@string/eating_2"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/baijamjuree_regular"
                    android:lineSpacingExtra="5dp"
                    android:text="@string/eating_3"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/good_food" />

                <TextView
                    android:layout_width="wrap_content"
