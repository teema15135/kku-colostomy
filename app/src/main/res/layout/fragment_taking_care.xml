<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TakingCareFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:alpha="0.3"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:src="@drawable/destination" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always"
        android:scrollbars="none">

        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/title_tc"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/mitr_regular"
                    android:gravity="center"
                    android:textColor="@color/darker"
                    android:text="@string/taking_care"
                    android:textSize="30dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <Button
                            android:id="@+id/taking_care_one_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="25dp"
                            android:background="@drawable/selector_pastel_blue_shadow_round"
                            android:fontFamily="@font/baijamjuree_regular"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="10dp"
                            android:text="@string/see_the_wound_before_change_the_bag"
                            android:textColor="@color/darker"
                            android:textScaleX="1.04"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/people_placeholder"
                            android:translationZ="3dp" />

                    </RelativeLayout>



                    <RelativeLayout
                        android:layout_marginTop="80dp"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_marginRight="20dp">

                        <Button
                            android:layout_marginRight="10dp"
                            android:id="@+id/taking_care_two_btn"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/selector_pastel_blue_shadow_round"
                            android:fontFamily="@font/baijamjuree_regular"
                            android:lineSpacingExtra="5dp"
                            android:lineSpacingMultiplier="0.8"
                            android:paddingLeft="30dp"
                            android:paddingTop="8dp"
                            android:paddingRight="30dp"
                            android:paddingBottom="8dp"
                            android:text="@string/change_platform"
                            android:textAlignment="center"
                            android:textColor="@color/darker"
                            android:textScaleX="1.04"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/people_placeholder"
                            android:translationZ="3dp" />

                    </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="80dp"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="40dp">

                <Button
                    android:id="@+id/taking_care_three_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/selector_pastel_blue_shadow_round"
                    android:fontFamily="@font/baijamjuree_regular"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="10dp"
                    android:text="@string/take_out_waste"
                    android:textColor="@color/darker"
                    android:textScaleX="1.04"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/people_placeholder"
                    android:translationZ="3dp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>